<h2>
	<span id="vote_score">
		Score: <%= @story.votes.size %>
	</span>
	<%= @story.name %>
</h2>
<ul id="vote_history">
	<% if @story.votes.empty? %>
	<em>No shoves yet!</em>
	<% else %>
	<%= render :partial => 'votes/vote', 
			   :collection => @story.votes %>
	<% end %>
</ul>
<p>
	<%= link_to @story.link, @story.link %>
</p>
<div id="vote_form">
	<% form_remote_tag :url => story_votes_path(@story) do %>
		<%= submit_tag 'shove it' %>
	<%end%>
</div>